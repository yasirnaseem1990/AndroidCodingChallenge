<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".module.view.activity.LauncherActivity">

    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android_coding_challenge"
        android:textColor="@color/whiteColor"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_16"
        android:fontFamily="@font/source_sans_pro_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivSplash"
        app:layout_constraintStart_toStartOf="@+id/ivSplash"
        app:layout_constraintTop_toTopOf="@+id/ivSplash" />
</androidx.constraintlayout.widget.ConstraintLayout>